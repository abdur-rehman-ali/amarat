<p id="notice"><%= notice %></p>
<!-- ======= Latest Properties Section ======= -->
<section class="section-agents section-t8">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title-wrap d-flex justify-content-between">
          <div class="title-box">
            <h2 class="title-a">Latest Properties</h2>
          </div>
          <div class="title-link">
            <a href="agents-grid.html">All properties
              <span class="bi bi-chevron-right"></span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">

     <% @properties.each do |property| %>
      <div class="col-md-4  mb-5">
          <div class="card-box-a card-shadow">
            <div class="img-box-a">
            <% if property.images.attached?%>
              <%= image_tag property.images.first ,class:"img-a img-fluid" %>
            <% else %>
              <%= image_tag "property-1.jpg" ,class:"img-a img-fluid" %>
            <% end %>
              
            </div>
            <div class="card-overlay">
              <div class="card-overlay-a-content">
                <div class="card-header-a">
                  <h2 class="card-title-a">
                     <%= link_to property.location , property%>
                  </h2>
                </div>
                <div class="card-body-a">
                  <div class="price-box d-flex">
                    <span class="price-a"><%= property.property_type %> | $ <%=property.price %></span>
                  </div>
                  <%= link_to 'Click here to view', property ,class:'link-a'%>
                </div>
                <div class="card-footer-a">
                  <ul class="card-info d-flex justify-content-around">
                    <li>
                      <h4 class="card-info-title">Area</h4>
                      <span><%= property.area %>
                      </span>
                    </li>
                    <li>
                      <h4 class="card-info-title">Beds</h4>
                      <span><%= property.bed %></span>
                    </li>
                    <li>
                      <h4 class="card-info-title">Baths</h4>
                      <span><%= property.bath %></span>
                    </li>
                    <li>
                      <h4 class="card-info-title">Garages</h4>
                      <span><%= property.garage %></span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
      </div>
    <% end %>
    
    </div>
    
  </div>
</section>
<!-- End Latest Properties Section -->